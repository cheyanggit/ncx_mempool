{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: gcc-7 build active file",
            "command": "/usr/bin/gcc-7",
            "args": [
                "-g",
                "${workspaceFolder}/main.c",
                "${workspaceFolder}/ncx_slab.c",
                "-o",
                "${fileDirname}/testMain"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}